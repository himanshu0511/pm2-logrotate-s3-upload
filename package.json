{
  "name": "pm2-logrotate-s3-upload",
  "version": "2.0.9",
  "description": "Module to rotate logs of every pm2 application and upload logs to s3",
  "main": "app.js",
  "dependencies": {
    "aws-s3-promisified": "^2.0.0",
    "deep-extend": "^0.6.0",
    "graceful-fs": "^4.1.11",
    "moment-timezone": "^0.5.11",
    "node-schedule": "^1.1.1",
    "pm2": "latest",
    "pmx": "latest"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Himanshu Pandey",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/himanshu0511/pm2-logrotate-s3-upload.git"
  },
  "bugs": {
    "url": "https://github.com/himanshu0511/pm2-logrotate-s3-upload/issues"
  },
  "homepage": "https://github.com/himanshu0511/pm2-logrotate-s3-upload",
  "license": "MIT",
  "apps": [
    {
      "name": "pm2-logrotate-s3-upload",
      "script": "app.js",
      "max_memory_restart": "500M",
      "post_update": ["source ~/.bashrc"]
    }
  ],
  "config": {
    "max_size": "10M",
    "retain": "30",
    "compress": false,
    "dateFormat": "YYYY-MM-DD_HH-mm-ss",
    "workerInterval": "30",
    "rotateInterval": "0 0 * * *",
    "rotateModule": true,
    "serverIp": null,
    "aws": {
      "credentials": {
        "accessKeyId": null,
        "secretAccessKey": null,
        "region": null
      }
    },
    "logBucketSetting": {
      "bucket": null,
      "s3Path": null,
      "s3FilePathFormat": ""
    },
    "getAWSPublicIp": false
  }
}
